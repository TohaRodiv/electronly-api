{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
	"paths": {
		"#common/*": ["./src/common/*"],
		"#modules/*": ["./src/modules/*"],
		"#config/*": ["./src/config/*"],
		"#config": ["./src/config"]
	}
  }
}
